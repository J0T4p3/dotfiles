{
  //// Vim-mode configurations
  // General configurations
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.smartRelativeLine": true,
  "vim.replaceWithRegister": true,

 // Insert Mode Keybindings
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    },
  ],

  // Visual mode keybindings Non recursive
  "vim.visualModeKeyBindingsNonRecursive":[
    // Moving text around
    {
      "before": ["<C-l>"],
      "commands": ["editor.action.indentLines"],
      "silent": true
    },
    {
      "before": ["<C-h>"],
      "commands": ["editor.action.outdentLines"],
      "silent": true
    },
    {
      "before": ["<C-j>"] ,
      "commands": ["editor.action.moveLinesDownAction"],
      "silent": true
    },
    {
      "before": ["<C-k>"] ,
      "commands": ["editor.action.moveLinesUpAction"],
      "silent": true
    },
  ],

  // Normal mode keybindings Non recursive
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "b"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "B"],
      "commands": ["workbench.action.toggleAuxiliaryBar"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["leader", "w"],
      "commands": [
        "workbench.action.files.save",
      ]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "before": ["<leader>", "p"], 
      "commands": ["workbench.action.showCommands",],
      "silent": true
    },
    {
      "before": ["<leader>", "e"], 
      "commands": ["workbench.view.explorer"],
      "silent": true
    },
    // Movimentação entre buffers
    {
      "before": ["<C-h>"], 
      "after": ["<C-w>", "h"], 
      "silent": true
    },
    {
      "before": ["<C-j>"], 
      "after": ["<C-w>", "j"], 
      "silent": true
    },
    {
      "before": ["<C-k>"], 
      "after": ["<C-w>", "k"], 
      "silent": true
    },
    {
      "before": ["<C-l>"], 
      "after": ["<C-w>", "l"], 
      "silent": true
    },
    {
      "before": ["<C-q>"], 
      "after": ["<C-w>", "q"], 
      "silent": true
    },
  ],

  // Keybindings handled to vs code
"vim.handleKeys": {
    "<C-a>": false, // Select all text
    "<C-b>": false, // Toggle sidebar
    "<C-e>": false, // Toggle file search 
    "<C-f>": false  // Search word
  },
  
  // Yank highlighting
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(250, 250, 250)",
  "vim.highlightedyank.textColor": "rgba(0, 0, 0)",
  
  // Others
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  //// Vscode configuration
  // User config
  "window.newWindowProfile": "Default",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.location": "hidden",
  "breadcrumbs.enabled": false,
  "workbench.startupEditor": "none",
  "editor.minimap.enabled": false,
  "material-icon-theme.hidesExplorerArrows": true,
  "workbench.tree.enableStickyScroll": false,
  "emmet.includeLanguages": {
    "asp": "html"
  },
  "explorer.confirmDelete": false,
  "files.autoSave": "afterDelay",

  // Usage config
}